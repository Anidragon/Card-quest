import java.awt.Color;

public class LegendaryShield extends Card
{
	public LegendaryShield()
	{
		super(Color.ORANGE, "This card puts on a shield that is double the Hero's healthstat", 5, "Legendary Shield");
		
		
	}
	
	public void use(Hero hero)
	{
		hero.shield(hero.getHealthStat()*2);
		
		
	}
	
	
	
	
}
