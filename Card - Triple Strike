import java.awt.Color;

public class TripleStrikeCard extends Card
{
	public TripleStrikeCard()
	{
		super(Color.RED, "This card does triple the damage of your AttackStat", 3, "Triple Strike");
		
		
		
	}
	
	public void use(Hero hero, Enemies enemy)
	{
		int damage = (hero.getAttackStat() * 3);
		enemy.takeDamage(damage);
		
		
		
	}
	
	
	
}
