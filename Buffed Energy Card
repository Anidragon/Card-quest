import java.awt.Color;

public class BuffedEnergyCard extends Card
{
	public BuffedEnergyCard(Color color, String effect, int energy, String name)
	{
		super(Color.BLUE, "This card takes 2 energy and gives back 4 energy but also has a 30% probability of giving back 5 energy. This card also does damage of 50% of the Heros AttackStat", 2, "Buffed Energy");
		
	}
	
	public void use(Hero hero, Enemies enemy)
	{
		int r = (int) ((Math.random()*100) + 1);
		int energy = 0;
		if(r < 30)
		{
			energy = hero.getEnergy() + 5;			
		}
		else
		{
			energy = hero.getEnergy() + 4;
			
		}
		enemy.takeDamage((int)(hero.getAttackStat()*0.5)); 
		
		
		
		
		
		
	}
	
	
	
}

